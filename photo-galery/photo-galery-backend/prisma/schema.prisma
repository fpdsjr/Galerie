generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String  @unique
  password  String
  photo     Photo[]

  @@map("users")
}

model Photo {
  id        Int      @id @default(autoincrement())
  name      String
  size      String
  key       String   @unique
  createdAt DateTime @default(now())
  url       String
  short_url String   @unique
  user_id   Int
  user      User     @relation(fields: [user_id], references: [id])

  @@map("photo")
}
